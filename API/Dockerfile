FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy entire repo (API + UI)
COPY . .

# Explicitly publish csproj (BEST PRACTICE)
RUN dotnet publish API/TIMEAPI/TIMEAPI.csproj -c Release -o /app/publish

FROM runtime
WORKDIR /app
COPY --from=build /app/publish .
EXPOSE 8080
ENTRYPOINT ["dotnet", "TIMEAPI.dll"]